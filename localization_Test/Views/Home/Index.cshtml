@model localization_Test.Models.LoginUser
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/defaultlayout.cshtml";
}

<h2>@LocalizationResources.Resources.home_index</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.UserName, new { htmlAttributes = new{ placeholder = Html.DisplayNameFor(n => n.UserName) } })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { placeholder = Html.DisplayNameFor(n => n.Password) } })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { placeholder = Html.DisplayNameFor(n => n.Email) } })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@LocalizationResources.Resources.sign_up" class="btn btn-default" />
            </div>
        </div>
    </div>
}